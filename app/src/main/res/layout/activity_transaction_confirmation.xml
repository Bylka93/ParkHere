<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/base_toolbar"
        android:id="@+id/post_listing_toolbar"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirmation_header"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/listing_details"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/listing_details_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/listing_details"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/billing_information"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/billing_information_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/billing_information"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/place_booking_button"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/place_booking"/>




        </LinearLayout>


    </ScrollView>

</LinearLayout>